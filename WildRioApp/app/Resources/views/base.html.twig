<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Wild Rio{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">
        <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">

        <script type="text/javascript" src="{{ asset('js/jquery.js') }}" ></script>
        <script type="text/javascript" src="{{ asset('js/modal.js') }}" ></script>
        <script type="text/javascript" src="{{ asset('js/bootstrap.min.js') }}" ></script> 
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
        <footer>
            <div class="col-md-12 footer">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="col-md-4">
                        <a href=""><img class="external-link" src="{{ asset('img/facebook.png') }}"></a>
                    </div>
                    <div class="col-md-4">
                        <a href=""><img class="external-link" src="{{ asset('img/googleplus.png') }}"></a>
                    </div>
                    <div class="col-md-4">                    
                        <a href=""><img class="external-link" src="{{ asset('img/twitter.png') }}"></a>
                    </div>
                </div>
                <div class="col-md-3"></div>
            </div>
        </footer>
    </body>
</html>
